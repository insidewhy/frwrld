doctype 5
html(lang='en')
  head
    title frwlrd
    link(type='text/css', rel='stylesheet', href='styles/global.css')
    link(type='text/css', rel='stylesheet', href='styles/canvas.css')
    link(type='text/css', rel='stylesheet', href='styles/toolbox.css')
  body
    #ui
      #canvas
        canvas
      #toolbox
        #user
          #register
            .header Register
            form(onsubmit='frwlrd.register()', method='post', action='/register')
              label Email:
              input(name='email', type='email')
              label Password:
              input(name='password', type='password')
              div
                input(type='submit', value="Register")
                .clear
